<h1> <%=@page_owner.username %>
</h1>

<p class="userProfile">
  <ul>
  <li>Real name: <%=@page_owner.first_name %> <%=@page_owner.last_name %> </br></li>
  <li>Age: <%=@page_owner.age %> </br></li>
  <li>Height: <%=@page_owner.height %> </br></li>
  <li>Bio: <%=@page_owner.bio %> </li> </br>
</ul>
</p>

<h3> <%=@page_owner.username %>'s Comments </h3>

<div class="new_comment">
  <input type="button" class="add_comment_button" value="Leave a comment">
</div>

<div id="comment_block">
  <div class="comment_form">
    <form action="/comment/<%=@page_owner.id%>/new" method = "POST">
    <input type="text" name="comment[content]">
    <input type="submit">
    </form>
  </div>
  <div class="userComments">
    <%= erb :'/comment/all', locals: {comments: @all_comments, page_owner: @page_owner}, layout: false %>
  </div>
</div>

