<h1> <%=@page_owner.username %>
</h1>

<p class="userProfile">
  <%=@page_owner.first_name %> <%=@page_owner.last_name %> </br>
  <%=@page_owner.age %> </br>
  <%=@page_owner.height %> </br>
  <%=@page_owner.bio %> </br>
</p>

<div class="userComments">
  Add a comment for <%= @page_owner.username %>
  <form action="/comment/<%=@page_owner.id%>/new" method = "POST">
  <input type="text" name="comment[content]">
  <input type="submit">
</form>

</div>
